<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.le.shiro_demo.dao.UserMapper">
    <select id="getAll" resultType="com.le.shiro_demo.model.User">
      select * from user_info
    </select>
    <select id="getUserByName" resultType="com.le.shiro_demo.model.User">
        select * from user_info where name = #{name}
    </select>
</mapper>